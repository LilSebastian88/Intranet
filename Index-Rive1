<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Rive Animation Embed</title>
  <script src="https://unpkg.com/@rive-app/webgl"></script>
  <style>
    html, body {
      margin: 0;
      padding: 0;
      background: transparent;
      height: 100%;
      width: 100%;
    }
    canvas {
      width: 100%;
      height: 100%;
      display: block;
    }
  </style>
</head>
<body>
  <canvas id="riveCanvas"></canvas>

  <script>
    new rive.Rive({
      src: "https://raw.githubusercontent.com/LilSebastian88/Intranet/main/012_machine_learning_icon.riv",
      canvas: document.getElementById("riveCanvas"),
      autoplay: true,
      stateMachines: ["State Machine 1"], // Replace with your actual state machine name
      onLoad: (riveInstance) => {
        const inputs = riveInstance.stateMachineInputs("State Machine 1");
        const hoverInput = inputs.find(i => i.name === "hovered");
        const canvas = document.getElementById("riveCanvas");

        if (hoverInput) {
          canvas.addEventListener("mouseenter", () => hoverInput.value = true);
          canvas.addEventListener("mouseleave", () => hoverInput.value = false);
        }
      }
    });
  </script>
</body>
</html>
